@{
    ViewData["Title"] = "Access Denied";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card mt-5">
                <div class="card-header bg-danger text-white text-center">
                    <h4><i class="bi bi-shield-exclamation"></i> Access Denied</h4>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="bi bi-shield-exclamation display-1 text-danger"></i>
                    </div>
                    <h5>You don't have permission to access this resource</h5>
                    <p class="text-muted">
                        You need appropriate permissions to perform this action.
                        Please contact your administrator if you believe this is an error.
                    </p>

                    <div class="alert alert-info">
                        <strong>Permission Levels:</strong><br>
                        <small>
                            <i class="bi bi-eye"></i> <strong>View:</strong> All authenticated users<br>
                            <i class="bi bi-pencil"></i> <strong>Create/Edit:</strong> Editor and Admin roles<br>
                            <i class="bi bi-trash"></i> <strong>Delete:</strong> Admin role only
                        </small>
                    </div>

                    <div class="mt-4">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                            <i class="bi bi-house"></i> Go Home
                        </a>
                        <button onclick="history.back()" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Go Back
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>