@model WebApplication1.ViewModels.ItemVM
@{
    ViewData["Title"] = "Delete Book";
}
<div class="container p-3">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Book</h2>
            <hr />
        </div>
        <div class="alert alert-warning" role="alert">
            <h4 class="alert-heading">Warning!</h4>
            <p>Are you sure you want to delete this book?</p>
            <p class="mb-0"><strong>Book:</strong> @Model.Name</p>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label"><strong>Book Title:</strong></label>
                    <p>@Model.Name</p>
                </div>
                <div class="mb-3">
                    <label class="form-label"><strong>Author:</strong></label>
                    <p>@Model.AuthorName</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label"><strong>Category:</strong></label>
                    <p>@Model.CategoryName</p>
                </div>
                <div class="mb-3">
                    <label class="form-label"><strong>Created:</strong></label>
                    <p>@Model.TimeCreated.ToString("dd/MM/yyyy")</p>
                </div>
            </div>
        </div>
        @if (!string.IsNullOrEmpty(Model.PdfPath))
        {
            <div class="mb-3">
                <label class="form-label"><strong>PDF File:</strong></label>
                <p>
                    <a href="@Model.PdfPath" class="btn btn-sm btn-outline-success" target="_blank">
                        <i class="bi bi-file-pdf"></i> View Current PDF
                    </a>
                    <span class="text-warning ms-2">This file will also be deleted!</span>
                </p>
            </div>
        }
        <br />
        <hr />
        <form method="post" asp-controller="Items" asp-action="Delete">
            <input asp-for="Id" hidden />
            <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
            <a asp-action="Index" asp-controller="Items" class="btn btn-secondary" style="width:150px">
                Cancel
            </a>
        </form>
    </div>
</div>