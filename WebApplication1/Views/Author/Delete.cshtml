@model WebApplication1.Models.Author
@{
    ViewData["Title"] = "Delete Author";
}
<div class="container p-3">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Author</h2>
            <hr />
        </div>
        <div class="alert alert-warning" role="alert">
            <h4 class="alert-heading">Warning!</h4>
            <p>Are you sure you want to delete this author?</p>
            @if (Model.Books != null && Model.Books.Any())
            {
                <p class="mb-0"><strong>Note:</strong> This author has @Model.Books.Count book(s) associated. Deleting this author may affect the book records.</p>
            }
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label"><strong>Author Name:</strong></label>
                    <p>@Model.AuthorName</p>
                </div>
                <div class="mb-3">
                    <label class="form-label"><strong>Email:</strong></label>
                    <p>@Model.AuthorEmail</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label"><strong>Phone:</strong></label>
                    <p>@Model.AuthorPhone</p>
                </div>
                <div class="mb-3">
                    <label class="form-label"><strong>Age:</strong></label>
                    <p>@Model.AuthorAge</p>
                </div>
            </div>
        </div>
        @if (Model.Books != null && Model.Books.Any())
        {
            <div class="mb-3">
                <h5>Books by this Author:</h5>
                <ul class="list-group">
                    @foreach (var book in Model.Books)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            @book.Name
                            <span class="badge bg-primary rounded-pill">@book.Category?.Name</span>
                        </li>
                    }
                </ul>
            </div>
        }
        <br />
        <hr />
        <form method="post" asp-controller="Author" asp-action="Delete">
            <input asp-for="Id" hidden />
            <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
            <a asp-action="Index" asp-controller="Author" class="btn btn-secondary" style="width:150px">
                Cancel
            </a>
        </form>
    </div>
</div>